@model IEnumerable<Perscribo.EF.Library.Models.Role>

@{
    ViewBag.Title = "Index";
}

<h2>Company Interviews</h2>

<table>
    <tr>
        <th>
            Company
        </th>
        <th>
            Agency
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PositionTitle)
        </th>
        <th>
            Interviews
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Company.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Agency.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PositionTitle)
        </td>
        <td>
            @item.CompanyInterviews.Count
        </td>
        <td>
            @Html.ActionLink("Show", "Edit", new { id=item.ID })
        </td>
    </tr>
}

</table>
